<!DOCTYPE html>
<html>
  <head>
    <title>Resume</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice].present? %>
      <div class="message center-text notice"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert].present? %>
      <div class="message center-text alert"><%= flash[:alert] %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
