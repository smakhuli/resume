<h1>Resume Lists for <%= "#{User.find(@user_id).full_name}" %></h1>

<p>
  <%= button_to 'New Resume List Item', new_resume_list_path, class: "standard-button nav-button", method: :get, params: { user_id: @user_id } %>
</p>

<!-- Display Education List Items -->
<% if ResumeList.my_resume_list(@user_id).any? %>
  <% ResumeList::LIST_TYPES.each_with_index do |list_type, index| %>
    <%= render partial: 'by_list_type', locals:  {title: ResumeList::LIST_TITLES[index], list_type: list_type} %>
  <% end %>
<% else %>
  <p>No Resume List Items Have been Entered</p>
<% end %>

<p>
  <%= button_to 'Back', users_path, class: "standard-button nav-button", method: :get %>
</p>