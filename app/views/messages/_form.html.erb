<%= form_with(model: @message, local: true) do |form| %>

  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@message.errors.count, "error") %> prevented this message from being saved:
      </h2>
      <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label 'Your Name' %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label 'Your Email' %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label 'Message' %><br>
    <%= form.trix_editor :body %>
  </p>

  <p>
  <table>
    <tr>
      <td><%= form.submit 'Send', class: "standard-button nav-button", method: :post %></td>
      <td><%= link_to 'Back', users_path, class: "standard-button nav-button", method: :get %></td>
    </tr>
  </table>
  </p>

<% end %>