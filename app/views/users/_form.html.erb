<%= form_with(model: @user, local: true) do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </p>

  <p>
    <%= form.label :middle_name %><br>
    <%= form.text_field :middle_name %>
  </p>

  <p>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :make_private do %>
      <%= form.check_box :make_private %>
      Make Private
    <% end %>
  </p>

  <% if current_user.present? && current_user.is_admin? %>
    <p>
      <%= form.label :role %><br>
      <%= form.select :role, User::USER_ROLES %>
    </p>
  <% end %>

  <div class="field-group">
    <%= form.label :avatar %>

    <% unless @user.avatar.url.nil? %>
      <%= image_tag(@user.avatar.url().to_s) %>
    <% end %>

    <%= form.file_field :avatar %>

    <% if @user.avatar_url.present? %>
      <div class="field checkbox">
        <%= form.check_box :remove_avatar %>
        <%= form.label :remove_avatar, 'Remove Avatar' %>
      </div>
    <% end %>
  </div>

  <p>
    <table>
      <tr>
        <td><%= form.submit 'Save', class: "standard-button nav-button", method: :post %></td>
        <td><%= link_to 'Back', users_path, class: "standard-button nav-button", method: :get %></td>
      </tr>
    </table>
  </p>

<% end %>
