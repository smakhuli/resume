<%= form_with(model: @user, local: true) do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </p>

  <p>
    <%= form.label :middle_name %><br>
    <%= form.text_field :middle_name %>
  </p>

  <p>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %>
  </p>

  <p>
    <%= form.label :phone %><br>
    <%= form.text_field :phone %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :skype_name %><br>
    <%= form.text_field :skype_name %>
  </p>

  <p>
    <%= form.label :job_description %><br>
    <%= form.trix_editor :job_description %>
  </p>

  <div class="field-group">
    <%= form.label :avatar %>

    <% unless @user.avatar.url.nil? %>
      <%= image_tag(@user.avatar.url().to_s) %>
    <% end %>

    <%= form.file_field :avatar %>

    <% if @user.avatar_url.present? %>
      <div class="field checkbox">
        <%= form.check_box :remove_avatar %>
        <%= form.label :remove_avatar, 'Remove Avatar' %>
      </div>
    <% end %>
  </div>

  <p>
    <%= form.submit %>
  </p>
<% end %>
